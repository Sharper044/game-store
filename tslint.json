// This TSLint file is what we use at TCN for code style control.
{
  "extends": [
      "tslint:recommended",
      "tslint-config-airbnb",
      "tslint-react"
  ],
  "linterOptions": {
      "exclude": [
          "../bazel-*/**",
          "dist",
          "config",
          "src/shared/protos/**",
          "src/public/webphone/**"
      ]
  },
  "jsRules": {
      "jsx-boolean-value": [true, "never"],
      "no-increment-decrement": false,
      "no-parameter-reassignment": false,
      "align": false,
      "semicolon": [
          true,
          "always"
      ],
      "quotemark": [
          true,
          "single",
          "jsx-double"
      ],
      "object-literal-sort-keys": false,
      "curly": [
          true,
          "ignore-same-line"
      ],
      "max-line-length": false,
      "no-consecutive-blank-lines": [
          true,
          3
      ],
      "jsdoc-format": false,
      "no-console": {
          "severity": "none",
          "options": [
              "log",
              "info",
              "error"
          ]
      },
      "trailing-comma": [
          true,
          {
              "multiline": {
                  "objects": "always",
                  "arrays": "always",
                  "functions": "never",
                  "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
          }
      ],
      "space-before-function-paren": [
          true,
          {
              "anonymous": "always",
              "named": "never",
              "asyncArrow": "always"
          }
      ],
      "no-unused-expression": [
          true,
          "allow-fast-null-checks",
          "allow-tagged-template"
      ],
      "radix": true,
      "no-duplicate-imports": true
  },
  "rules": {
      "jsx-boolean-value": [true, "never"],
      "interface-name": [false, "always-prefix"],
      "import-name": false,
      "no-increment-decrement": false,
      "no-parameter-reassignment": false,
      "align": false,
      "no-any": false,
      "sort-import": false,
      "semicolon": [
          true,
          "always"
      ],
      "quotemark": [
          true,
          "single",
          "jsx-double"
      ],
      "object-literal-sort-keys": false,
      "curly": [
          true,
          "ignore-same-line"
      ],
      "max-line-length": false,
      "no-consecutive-blank-lines": [
          true,
          3
      ],
      "jsdoc-format": false,
      "no-console": {
          "severity": "none",
          "options": [
              "log",
              "info",
              "error"
          ]
      },
      "trailing-comma": [
          true,
          {
              "multiline": {
                  "objects": "always",
                  "arrays": "always",
                  "functions": "never",
                  "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
          }
      ],
      "space-before-function-paren": [
          true,
          {
              "anonymous": "always",
              "named": "never",
              "asyncArrow": "always"
          }
      ],
      "variable-name": [
          true,
          "ban-keywords",
          "allow-leading-underscore",
          "allow-pascal-case"
      ],
      "no-unused-expression": [
          true,
          "allow-fast-null-checks",
          "allow-tagged-template"
      ],
      "radix": true,
      "jsx-no-lambda": false,
      "jsx-no-multiline-js": false,
      "no-unused-variable": [ true, { "ignore-pattern": "^_" } ],
      "no-duplicate-imports": true,
      "no-debugger": {
          "severity": "warning"
      },
      "max-classes-per-file": false,
      "array-type": false,
      "prefer-array-literal": false,
      "prefer-for-of": false,
      "no-string-literal": false,
      "prefer-template": [ true, "allow-single-concat" ]
  }
}
